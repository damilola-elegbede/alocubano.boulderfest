# ================================================
# A Lo Cubano Boulder Fest - Environment Variables
# ================================================
# Copy this file to .env.local and fill in your values
# For production, add these to Vercel Environment Variables

# ================================================
# DATABASE CONFIGURATION
# ================================================
# Get from: https://turso.tech or run `turso db create`
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# ================================================
# EMAIL SERVICE (Brevo/SendinBlue)
# ================================================
# Get from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_ORDER_CONFIRMATION_TEMPLATE_ID=2
BREVO_WEBHOOK_SECRET=your-webhook-secret
UNSUBSCRIBE_SECRET=your-unsubscribe-secret

# ================================================
# PAYMENT PROCESSING (Stripe)
# ================================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret
STRIPE_DEFAULT_CURRENCY=usd
STRIPE_PAYMENT_METHOD_TYPES=card,us_bank_account

# ================================================
# ADMIN DASHBOARD
# ================================================
# Generate password hash: npm run generate-admin-password
ADMIN_PASSWORD=$2a$10$REPLACE_WITH_BCRYPT_HASH
ADMIN_SECRET=your-secure-session-secret-min-32-chars
ADMIN_SESSION_DURATION=3600000
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION_MS=1800000
ADMIN_CLEANUP_INTERVAL_MS=3600000

# Admin Query Limits
ADMIN_MAX_QUERY_LIMIT=1000
ADMIN_MAX_QUERY_OFFSET=10000
ADMIN_MAX_SEARCH_LENGTH=100

# ================================================
# APPLE WALLET CONFIGURATION
# ================================================
# Get from: Apple Developer Portal
APPLE_PASS_TYPE_ID=pass.com.alocubano.boulderfest
APPLE_TEAM_ID=XXXXXXXXXX
APPLE_PASS_ORGANIZATION="A Lo Cubano Boulder Fest"
# Generate base64: cat certificate.p12 | base64
APPLE_PASS_CERT=base64-encoded-certificate
# Generate base64: cat private-key.pem | base64
APPLE_PASS_KEY=base64-encoded-private-key
APPLE_PASS_PASSWORD=your-certificate-password
# Generate base64: cat AppleWWDRCAG3.cer | base64
APPLE_WWDR_CERT=base64-encoded-wwdr-certificate
WALLET_AUTH_SECRET=your-secure-random-string-for-jwt-signing

# ================================================
# GOOGLE WALLET CONFIGURATION
# ================================================
# Get from: Google Pay & Wallet Console
GOOGLE_WALLET_ISSUER_ID=3388000000000000000
GOOGLE_WALLET_CLASS_ID=alocubano_tickets_2026
# Generate base64: cat service-account.json | base64
GOOGLE_WALLET_SERVICE_ACCOUNT=base64-encoded-service-account-json

# ================================================
# WALLET COMMON CONFIGURATION
# ================================================
# For local development: https://alocubanoboulderfest.ngrok.io
# For production: https://alocubano.boulderfest.com
WALLET_BASE_URL=https://your-domain.com
WALLET_ENABLE_UPDATES=true
BASE_URL=https://your-domain.com

# ================================================
# GOOGLE DRIVE (Gallery Integration)
# ================================================
# Optional - for gallery photo integration
GOOGLE_DRIVE_FOLDER_ID=your-folder-id
GOOGLE_DRIVE_GALLERY_FOLDER_ID=your-gallery-folder-id
GOOGLE_DRIVE_FEATURED_PHOTOS_FOLDER_ID=your-featured-folder-id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY="EXAMPLE_ONLY_DO_NOT_USE"

# ================================================
# GOOGLE SHEETS SYNC
# ================================================
# Create a Google Sheet and share with service account
GOOGLE_SHEET_ID=your-google-sheet-id
GOOGLE_SHEETS_SERVICE_ACCOUNT_EMAIL=your-sheets-service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="EXAMPLE_ONLY_DO_NOT_USE"
SHEETS_TIMEZONE=America/Denver
SHEETS_SYNC_INTERVAL=900000
CRON_SECRET=your-cron-secret-for-vercel

# ================================================
# REGISTRATION SYSTEM
# ================================================
# JWT signing secret for registration tokens (min 32 chars)
REGISTRATION_JWT_SECRET=your-secure-registration-jwt-secret-min-32-chars
# Token expiry duration (default: 24h)
REGISTRATION_TOKEN_EXPIRY=86400000
# Registration deadline (hours after purchase)
REGISTRATION_DEADLINE_HOURS=72
# Reminder schedule (hours before deadline)
REGISTRATION_REMINDER_SCHEDULE=72,48,24,2
# Email template IDs for registration
BREVO_PURCHASER_CONFIRMATION_TEMPLATE_ID=3
BREVO_ATTENDEE_CONFIRMATION_TEMPLATE_ID=4
BREVO_REGISTRATION_REMINDER_TEMPLATE_ID=5

# ================================================
# QR CODE CONFIGURATION
# ================================================
QR_SECRET_KEY=your-very-secure-secret-key-min-32-chars
QR_CODE_EXPIRY_DAYS=90
QR_CODE_MAX_SCANS=10

# ================================================
# EVENT CONFIGURATION
# ================================================
EVENT_START_DATE=2026-05-15T10:00:00-06:00
EVENT_END_DATE=2026-05-17T23:00:00-06:00
EVENT_DATES_DISPLAY="May 15-17, 2026"

# ================================================
# VENUE CONFIGURATION
# ================================================
VENUE_NAME="Avalon Ballroom"
VENUE_ADDRESS="6185 Arapahoe Road, Boulder, CO 80303"
VENUE_LATITUDE=40.014984
VENUE_LONGITUDE=-105.219544

# ================================================
# MONITORING & ALERTING (Optional)
# ================================================
# Sentry Error Tracking - https://sentry.io
SENTRY_DSN=https://your-key@sentry.io/your-project-id
SENTRY_ORG=your-organization
SENTRY_PROJECT=your-project-name

# Alert Webhooks
# Slack: https://api.slack.com/messaging/webhooks
# Discord: https://support.discord.com/hc/en-us/articles/228383668
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ESCALATION_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ESCALATION/URL

# Alert Thresholds (defaults shown)
API_RESPONSE_THRESHOLD=2000
DB_RESPONSE_THRESHOLD=1000
ERROR_RATE_THRESHOLD=0.05
MEMORY_USAGE_THRESHOLD=80
PAYMENT_FAILURE_THRESHOLD=0.01

# External Monitoring
BETTER_UPTIME_API_KEY=your-better-uptime-key
BETTER_UPTIME_MONITOR_ID=your-monitor-id

# ================================================
# ENVIRONMENT
# ================================================
# development | production
NODE_ENV=development

# ================================================
# OPTIONAL CONFIGURATIONS
# ================================================
# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# CORS (comma-separated, leave empty for defaults)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# PayPal (if using PayPal)
PAYPAL_CLIENT_ID=your-client-id
PAYPAL_CLIENT_SECRET=your-client-secret

# Apple Sign In (if using Sign in with Apple)
APPLE_CLIENT_ID=com.alocubano.boulderfest.web
APPLE_KEY_ID=XXXXXXXXXX
APPLE_PRIVATE_KEY="EXAMPLE_ONLY_DO_NOT_USE"
APPLE_REDIRECT_URI=https://your-domain.com/api/auth/apple/callback