# Environment variables example
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# Google Drive API Configuration
# Follow the setup guide in GOOGLE_DRIVE_SETUP.md to obtain these values
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# Google Drive Folder ID
# Extract from your Google Drive folder URL
GOOGLE_DRIVE_FOLDER_ID=your-folder-id-here

# Optional configurations
# GALLERY_API_ENDPOINT=http://localhost:3000/api/gallery
# DEBUG=true

# =============================================================================
# BREVO CONFIGURATION (Email Marketing)
# =============================================================================
# Brevo API credentials
BREVO_API_KEY=xkeysib-xxx...
BREVO_WEBHOOK_SECRET=your-webhook-secret

# Brevo List IDs
BREVO_NEWSLETTER_LIST_ID=1
BREVO_TICKET_HOLDERS_LIST_ID=2
BREVO_VIP_LIST_ID=3
BREVO_WORKSHOPS_LIST_ID=4

# Brevo Template IDs
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_VERIFICATION_TEMPLATE_ID=2
BREVO_UNSUBSCRIBE_TEMPLATE_ID=3

# Email Configuration
SEND_WELCOME_EMAIL=true
REQUIRE_EMAIL_VERIFICATION=false
UNSUBSCRIBE_SECRET=your-unsubscribe-secret
SITE_URL=https://alocubanoboulderfest.com

# Rate limits for email endpoints
RATE_LIMIT_EMAIL_SUBSCRIPTION=20  # Per 15 minutes
RATE_LIMIT_EMAIL_UNSUBSCRIBE=10   # Per 15 minutes