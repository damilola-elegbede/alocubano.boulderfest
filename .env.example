# A Lo Cubano Boulder Fest - Environment Configuration Template
# Copy this file to .env.local and fill in your values

# Email Service (Brevo/SendinBlue)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_NEWSLETTER_LIST_ID=your_list_id_here
BREVO_WEBHOOK_SECRET=your_webhook_secret_here

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Payment Processing
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_MODE=sandbox # sandbox or live
PAYPAL_WEBHOOK_SECRET=your_paypal_webhook_secret

# Database (Production - Turso)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# Admin Authentication
ADMIN_PASSWORD=your_bcrypt_hashed_password_here
ADMIN_SECRET=minimum_32_character_secret_for_jwt_signing
TEST_ADMIN_PASSWORD=plain_text_password_for_e2e_testing_only

# Registration System (Required for ticket registration flow)
# Generate with: openssl rand -hex 32 or node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REGISTRATION_SECRET=minimum_32_character_secret_for_token_creation_and_jwt_verification

# Wallet Passes
APPLE_PASS_KEY=base64_encoded_apple_pass_key
WALLET_AUTH_SECRET=jwt_signing_secret_for_wallet_passes

# Google Services (Optional)
GOOGLE_DRIVE_API_KEY=your_google_drive_api_key
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Internal APIs Security
INTERNAL_API_KEY=your_internal_api_key_for_cache_operations

# Development Settings
NODE_ENV=development
DEBUG=false
MAINTENANCE_MODE=false

# ngrok (Development)
NGROK_AUTHTOKEN=your_ngrok_auth_token_optional

# Cache Settings (Optional)
ENABLE_CACHE=true
CACHE_TTL=3600