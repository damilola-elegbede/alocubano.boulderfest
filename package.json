{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "type": "module",
  "private": true,
  "engines": {
    "node": "20.x || 21.x || 22.x || 24.x"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' node -e \"import('child_process').then(({execSync}) => { const isVercel = process.env.VERCEL === '1'; const env = process.env.VERCEL_ENV || 'local'; console.log(''); console.log('üî® Build Process'); console.log('================'); console.log('Environment: ' + env); console.log('Platform: ' + (isVercel ? 'Vercel' : 'Local')); if(!isVercel) { console.log(''); console.log('üìã Running structure verification...'); execSync('npm run verify-structure', {stdio:'inherit'}); } console.log(''); console.log('‚úÖ Build completed successfully!'); console.log(''); }).catch(console.error);\"",
    "start": "npm run vercel:dev",
    "vercel:dev": "vercel dev --listen 3000",
    "vercel:preview": "vercel --target preview",
    "test": "NODE_OPTIONS='--max-old-space-size=2048' vitest run --config tests/vitest.config.js",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --config tests/config/vitest.integration.config.js",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=4096' PLAYWRIGHT_WORKERS=1 node scripts/vercel-deployment-manager.js && npx playwright test --config playwright-e2e-preview.config.js",
    "test:e2e:ci": "NODE_OPTIONS='--max-old-space-size=4096' PLAYWRIGHT_WORKERS=1 npx playwright test --config playwright-e2e-preview.config.js",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage --config tests/vitest.config.js",
    "test:all": "npm test && npm run test:integration && npm run test:coverage && npm run test:e2e",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:markdown",
    "lint:js": "eslint --config config/eslint.config.js js/**/*.js",
    "lint:html": "htmlhint --config config/.htmlhintrc pages/**/*.html",
    "lint:markdown": "markdownlint *.md CLAUDE.md INSTALLATION.md SECURITY.md --ignore node_modules --ignore .tmp",
    "migrate:up": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/migrate.js",
    "migrate:down": "echo '‚ö†Ô∏è  Warning: SQLite migration rollback not implemented. Manual database restoration required.' && echo 'Current migration system does not support automated rollback due to SQLite DDL limitations.' && exit 1",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:check": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/check-migration-status.js",
    "migrate:vercel": "node scripts/migrate-vercel-build.js",
    "verify-structure": "node scripts/verify-structure.js",
    "validate-ci-fixes": "node scripts/validate-ci-fixes.js",
    "enterprise:migrate": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/migrate-to-enterprise.js",
    "enterprise:health": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/deployment-health-check.js",
    "enterprise:tools": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/platform-tools.js",
    "drift:check": "node scripts/detect-package-drift.js"
  },
  "dependencies": {
    "@libsql/client": "^0.15.14",
    "@sentry/node": "^7.120.4",
    "@stripe/stripe-js": "^7.9.0",
    "@types/node": "^20.19.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "google-auth-library": "^10.3.0",
    "googleapis": "^153.0.0",
    "helmet": "^8.1.0",
    "html5-qrcode": "^2.3.8",
    "ioredis": "^5.7.0",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "passkit-generator": "^3.4.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "sqlite": "^5.1.1",
    "stripe": "^18.5.0",
    "thirty-two": "^1.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "express": "^5.1.0",
    "glob": "^11.0.3",
    "globals": "^15.15.0",
    "htmlhint": "^1.6.3",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "markdownlint-cli": "^0.45.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.10",
    "vercel": "^48.0.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "esbuild": "^0.25.9",
    "path-to-regexp": "^8.3.0",
    "undici": "^6.21.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.50.0",
    "@rollup/rollup-darwin-arm64": "^4.50.0",
    "@rollup/rollup-darwin-x64": "^4.50.0",
    "@rollup/rollup-win32-x64-msvc": "^4.50.0",
    "@libsql/darwin-arm64": "0.5.22",
    "@libsql/darwin-x64": "0.5.22",
    "@libsql/linux-x64-gnu": "0.5.22",
    "@libsql/linux-x64-musl": "0.5.22",
    "@libsql/win32-x64-msvc": "0.5.22",
    "@libsql/linux-arm64-gnu": "0.5.22",
    "@libsql/linux-arm64-musl": "0.5.22",
    "@libsql/linux-arm-gnueabihf": "0.5.22",
    "@libsql/linux-arm-musleabihf": "0.5.22"
  }
}
