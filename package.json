{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "type": "module",
  "private": true,
  "packageManager": "npm@8.0.0",
  "scripts": {
    "prebuild": "node ./scripts/generate-gallery-cache.js && node ./scripts/generate-featured-photos.js",
    "build": "npm run verify-structure && echo 'Build process completed'",
    "postbuild": "node ./scripts/verify-structure.js",
    "cache-warm": "node ./scripts/cache-warm-production.js",
    "performance:audit": "lighthouse http://localhost:8000 --output-path=./performance-audit.html --save-assets",
    "test": "npm run test:unit",
    "test:unit": "jest --config config/jest.unit.config.cjs",
    "test:all": "npm run test:unit && npm run test:links",
    "test:links": "node tests/run-link-tests.js",
    "test:links:verbose": "node tests/run-link-tests.js --verbose",
    "test:links:local": "node tests/run-link-tests.js --no-external",
    "test:links:json": "node tests/run-link-tests.js --json",
    "test:coverage": "jest --config config/jest.unit.config.cjs --coverage",
    "test:coverage:gallery": "jest --config config/jest.unit.config.cjs --coverage --testNamePattern=\"Gallery.*\"",
    "test:coverage:watch": "jest --config config/jest.unit.config.cjs --coverage --watch",
    "test:coverage:ci": "jest --config config/jest.unit.config.cjs --coverage --ci --watchAll=false",
    "coverage:open": "open coverage/unit/lcov-report/index.html || xdg-open coverage/unit/lcov-report/index.html",
    "coverage:serve": "cd coverage/unit/lcov-report && npx http-server -p 8080",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint --config config/eslint.config.js js/**/*.js",
    "lint:html": "htmlhint --config config/.htmlhintrc pages/**/*.html",
    "start-vercel-dev": "vercel dev --listen 3000",
    "start": "vercel dev --listen 3000",
    "serve:simple": "npx http-server . -p 8000",
    "vercel:test": "node scripts/vercel-local-test.js",
    "verify-structure": "node scripts/verify-structure.js",
    "pre-commit": "npm run lint && npm test"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "googleapis": "^153.0.0"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.8.0",
    "eslint": "^9.15.0",
    "express": "^5.1.0",
    "html-validator": "^6.0.1",
    "htmlhint": "^1.6.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "lighthouse": "^11.0.0",
    "puppeteer": "^23.11.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^36.0.1"
  }
}
