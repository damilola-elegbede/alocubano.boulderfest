{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@latest",
  "scripts": {
    "build": "node -e \"if(process.env.VERCEL === '1') { console.log('ðŸš€ Vercel build complete - skipping verification'); } else { console.log('ðŸ”§ Local build - running verification'); require('child_process').execSync('npm run verify-structure', {stdio:'inherit'}); }\" && echo 'Build process completed'",
    "postbuild": "node -e \"if(process.env.VERCEL === '1') { console.log('ðŸš€ Vercel postbuild - skipping verify-structure'); } else { import('./build/verify-structure.js').catch(e => console.log('Verify-structure skipped:', e.message)); }\"",
    "verify-structure": "node build/verify-structure.js",
    "performance:audit": "lighthouse http://localhost:8000 --output-path=./performance-audit.html --save-assets",
    
    "test": "npm run test:simple",
    "test:simple": "vitest run --config tests/vitest.config.js",
    "test:simple:watch": "vitest --config tests/vitest.config.js",
    "test:coverage": "COVERAGE=true vitest run --coverage --config tests/vitest.config.js",
    "test:health": "node scripts/test-health-endpoint.js",
    "test:smoke": "npm run test:health",
    "test:all": "npm run test:simple && npm run test:e2e",
    
    "test:e2e": "playwright test --config=playwright-e2e-vercel-main.config.js",
    "test:e2e:ui": "playwright test --ui --config=playwright-e2e-vercel-main.config.js",
    "test:e2e:headed": "playwright test --headed --config=playwright-e2e-vercel-main.config.js",
    "test:e2e:debug": "playwright test --debug --config=playwright-e2e-vercel-main.config.js",
    "test:e2e:fast": "ALL_BROWSERS=false playwright test --config=playwright-e2e-vercel-main.config.js",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install --with-deps",
    "test:e2e:ci": "playwright test --config=playwright-e2e-vercel.config.js",
    "test:e2e:ngrok": "node scripts/e2e-with-ngrok.js",
    "test:e2e:ngrok:ui": "node scripts/e2e-with-ngrok.js -- --ui",
    "test:e2e:ngrok:headed": "node scripts/e2e-with-ngrok.js -- --headed",
    "test:e2e:ngrok:debug": "node scripts/e2e-with-ngrok.js -- --debug",
    "test:e2e:ngrok:fast": "ALL_BROWSERS=false node scripts/e2e-with-ngrok.js",
    "test:e2e:validate": "node scripts/validate-e2e-setup.js",
    
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint --config config/eslint.config.js js/**/*.js",
    "lint:html": "htmlhint --config config/.htmlhintrc pages/**/*.html",
    
    "prestart": "node scripts/setup-database.js",
    "start": "node scripts/start-with-ngrok.js",
    "prestart:local": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/setup-database.js",
    "start:local": "node scripts/vercel-dev-wrapper.js",
    "start:clean": "rm -rf .vercel && node scripts/vercel-dev-wrapper.js",
    "start:ci": "node scripts/ci-server.js",
    "serve:simple": "npx http-server . -p 8000",
    
    "migrate:up": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:verify": "node scripts/migrate.js verify",
    "migrate:e2e:up": "node scripts/migrate-e2e.js up",
    "migrate:e2e:status": "node scripts/migrate-e2e.js status",
    
    "db:shell": "sqlite3 data/development.db",
    "db:e2e:setup": "node scripts/setup-e2e-database.js setup",
    "db:e2e:clean": "node scripts/setup-e2e-database.js clean",
    "db:e2e:reset": "node scripts/setup-e2e-database.js reset",
    
    "health:check": "curl -f http://localhost:3000/api/health/check | jq '.' || echo 'Health check failed'",
    "health:database": "curl -f http://localhost:3000/api/health/database | jq '.' || echo 'Database health check failed'",
    
    "deploy:check": "node scripts/deployment-check.js",
    "deploy:staging": "npm run lint && npm run test:all && vercel --target preview",
    "deploy:production": "npm run lint && npm run test:all && vercel --target production",
    
    "pre-commit": "npm run lint && npm test"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "@sentry/node": "^7.84.0",
    "@stripe/stripe-js": "^7.8.0",
    "@types/node": "^24.2.0",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.0",
    "dotenv-cli": "^10.0.0",
    "google-auth-library": "^10.2.1",
    "googleapis": "^153.0.0",
    "helmet": "^8.0.0",
    "html5-qrcode": "^2.3.8",
    "ioredis": "^5.7.0",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "passkit-generator": "^3.4.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "stripe": "^18.4.0",
    "thirty-two": "^1.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@axe-core/puppeteer": "^4.8.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "express": "^5.1.0",
    "happy-dom": "^18.0.1",
    "htmlhint": "^1.6.3",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "nock": "^14.0.9",
    "node-mocks-http": "^1.17.2",
    "puppeteer": "^23.11.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^36.0.1",
    "supertest": "^7.1.4",
    "vercel": "^41.0.2",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  }
}