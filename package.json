{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "type": "module",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/build-admin-files.js && node -e \"if(process.env.VERCEL === '1') { console.log('ðŸš€ Vercel build complete - admin files prepared'); } else { console.log('ðŸ”§ Local build - running verification'); require('child_process').execSync('npm run verify-structure', {stdio:'inherit'}); }\" && echo 'Build process completed'",
    "start": "node scripts/start-with-ngrok.js",
    "dev": "npm run start",
    "test": "NODE_OPTIONS='--max-old-space-size=6144' vitest run --config tests/vitest.config.js",
    "test:integration": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --config tests/config/vitest.integration.config.js",
    "test:e2e": "NODE_OPTIONS='--max-old-space-size=3072' playwright test --config tests/config/playwright/playwright-e2e-preview.config.js",
    "test:watch": "NODE_OPTIONS='--max-old-space-size=6144' vitest --config tests/vitest.config.js",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=6144' vitest run --coverage --config tests/vitest.config.js",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:markdown",
    "lint:js": "eslint --config config/eslint.config.js js/**/*.js",
    "lint:html": "htmlhint --config config/.htmlhintrc pages/**/*.html",
    "lint:markdown": "markdownlint *.md CLAUDE.md INSTALLATION.md SECURITY.md --ignore node_modules --ignore .tmp",
    "migrate:up": "DOTENV_CONFIG_PATH=.env.local node -r dotenv/config scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js status",
    "deploy": "NODE_OPTIONS='--max-old-space-size=4096' npm run lint && npm run test && vercel --target production",
    "health": "node scripts/test-health-endpoint.js",
    "preview": "vercel --target preview",
    "db:shell": "sqlite3 data/development.db",
    "verify-structure": "node scripts/verify-structure.js",
    "build:admin": "node scripts/build-admin-files.js"
  },
  "dependencies": {
    "@libsql/client": "^0.15.14",
    "@sentry/node": "^7.120.4",
    "@stripe/stripe-js": "^7.9.0",
    "@types/node": "^24.3.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "google-auth-library": "^10.3.0",
    "googleapis": "^153.0.0",
    "helmet": "^8.1.0",
    "html5-qrcode": "^2.3.8",
    "ioredis": "^5.7.0",
    "ip-range-check": "^0.2.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "passkit-generator": "^3.4.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "sqlite": "^5.1.1",
    "stripe": "^18.5.0",
    "thirty-two": "^1.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.55.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.34.0",
    "express": "^5.1.0",
    "globals": "^15.15.0",
    "htmlhint": "^1.6.3",
    "http-server": "^14.1.1",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "markdownlint-cli": "^0.45.0",
    "ngrok": "^5.0.0-beta.2",
    "nodemon": "^3.1.10",
    "vercel": "^47.0.1",
    "vitest": "^2.1.9"
  }
}