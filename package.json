{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "type": "module",
  "private": true,
  "packageManager": "npm@8.0.0",
  "scripts": {
    "prebuild": "node ./scripts/generate-gallery-cache.js && node ./scripts/generate-featured-photos.js",
    "build": "npm run verify-structure && echo 'Build process completed'",
    "postbuild": "node ./scripts/verify-structure.js",
    "cache-warm": "node ./api/cache-warm.js",
    "performance:audit": "lighthouse http://localhost:8000 --output-path=./performance-audit.html --save-assets",
    "test": "npm run test:unit",
    "test:unit": "jest --config config/jest.unit.config.cjs",
    "test:integration": "jest --config config/jest.unit.config.cjs --testPathPattern='integration'",
    "test:e2e": "playwright test --config=config/playwright.config.js",
    "test:e2e:ui": "playwright test --config=config/playwright.config.js --ui",
    "test:security": "jest --config config/jest.unit.config.cjs --testPathPattern='security'",
    "test:performance": "jest --config config/jest.unit.config.cjs --testPathPattern='performance'",
    "test:a11y": "playwright test --config=config/playwright.config.js --project=accessibility",
    "test:coverage": "jest --config config/jest.unit.config.cjs --coverage",
    "test:watch": "jest --config config/jest.unit.config.cjs --watch",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:links",
    "test:links": "node tests/run-link-tests.js",
    "test:links:verbose": "node tests/run-link-tests.js --verbose",
    "test:links:local": "node tests/run-link-tests.js --no-external",
    "test:links:json": "node tests/run-link-tests.js --json",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint --config config/eslint.config.js js/**/*.js",
    "lint:html": "htmlhint --config config/.htmlhintrc pages/**/*.html",
    "start": "npx vercel dev --listen 3000",
    "serve:simple": "npx http-server . -p 8000",
    "verify-structure": "node scripts/verify-structure.js",
    "create-event": "node scripts/create-new-event.js",
    "update-navigation": "node scripts/update-navigation.js",
    "update-navigation:dry-run": "node scripts/update-navigation.js --dry-run",
    "validate-events": "node scripts/verify-structure.js && node scripts/update-navigation.js --dry-run",
    "event-lifecycle": "node scripts/manage-event-lifecycle.js",
    "event-lifecycle:list": "node scripts/manage-event-lifecycle.js list",
    "event-lifecycle:archive": "node scripts/manage-event-lifecycle.js auto-archive --dry-run",
    "pre-commit": "npm run lint && npm run test:fast",
    "test:fast": "FAST_TESTS=true SKIP_DB_TESTS=true jest --config config/jest.unit.config.cjs --passWithNoTests",
    "test:metrics": "node scripts/metrics-monitor.js",
    "test:pre-push": "npm run test:all && npm run test:integration && npm run test:performance",
    "db:migrate": "node scripts/run-migrations.js run",
    "db:migrate:dry-run": "node scripts/run-migrations.js run --dry-run",
    "db:migrate:status": "node scripts/run-migrations.js status",
    "db:migrate:reset": "node scripts/run-migrations.js reset --force",
    "deploy:check": "node scripts/deployment-check.js",
    "deploy:test": "npm run test:all && npm run test:performance && npm run test:integration",
    "deploy:quality-gate": "npm run lint && npm run deploy:test",
    "deploy:staging": "npm run deploy:quality-gate && vercel --target preview",
    "deploy:production": "npm run deploy:quality-gate && vercel --target production",
    "monitoring:init": "node scripts/initialize-monitoring.js",
    "monitoring:test": "node -e \"import('./monitoring/index.js').then(m => m.default.initializeMonitoring()).then(() => console.log('✅ Monitoring test passed')).catch(e => { console.error('❌ Monitoring test failed:', e); process.exit(1); })\""
  },
  "dependencies": {
    "@sentry/node": "^7.99.0",
    "@sentry/profiling-node": "^1.3.5",
    "dotenv": "^17.2.0",
    "googleapis": "^153.0.0",
    "pg": "^8.16.3",
    "sharp": "^0.34.3",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@axe-core/puppeteer": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^9.15.0",
    "express": "^5.1.0",
    "html-validator": "^6.0.1",
    "htmlhint": "^1.6.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-environment-node": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "lighthouse": "^11.0.0",
    "playwright": "^1.40.0",
    "puppeteer": "^23.11.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^36.0.1",
    "supertest": "^6.3.3",
    "vercel": "^39.0.0"
  }
}
