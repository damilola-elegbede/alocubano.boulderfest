{
  "name": "alocubano-boulderfest",
  "version": "1.0.0",
  "description": "A Lo Cubano Boulder Fest - Minimalist Dance Festival Website",
  "private": true,
  "scripts": {
    "prebuild": "node ./scripts/generate-gallery-cache.js && node ./scripts/generate-featured-photos.js",
    "build": "echo 'Build process completed'",
    "test": "jest",
    "test:html": "jest --testPathPattern=html-validation",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:perf": "jest --testPathPattern=performance",
    "test:links": "jest --testPathPattern=links",
    "test:gallery": "jest --testPathPattern=gallery",
    "test:api": "jest --testPathPattern=api",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:all": "npm test",
    "lint": "npm run lint:js && npm run lint:html",
    "lint:js": "eslint js/**/*.js",
    "lint:html": "htmlhint pages/**/*.html",
    "serve": "python3 -m http.server 8000",
    "pre-commit": "npm run lint && npm test"
  },
  "dependencies": {
    "googleapis": "^128.0.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.8.0",
    "eslint": "^9.15.0",
    "html-validator": "^6.0.1",
    "htmlhint": "^1.6.3",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "lighthouse": "^11.0.0",
    "puppeteer": "^23.11.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^36.0.1"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
