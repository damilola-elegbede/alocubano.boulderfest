# Production Environment Template
# Use these variables in your Vercel project settings

# Stripe Configuration (Production)
# Use LIVE keys for production: https://dashboard.stripe.com
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# Stripe Checkout Configuration
STRIPE_DEFAULT_CURRENCY=usd
STRIPE_PAYMENT_METHOD_TYPES=card,us_bank_account

# Turso Database Configuration (Production)
# Your production database URL from Turso dashboard
TURSO_DATABASE_URL=libsql://your-prod-database-name-your-org.turso.io
# Your production database auth token (keep this secure!)
TURSO_AUTH_TOKEN=your_production_auth_token_here

# Brevo (SendinBlue) Email Configuration (Production)
BREVO_API_KEY=your-live-brevo-api-key
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_ORDER_CONFIRMATION_TEMPLATE_ID=2
UNSUBSCRIBE_SECRET=your-secure-unsubscribe-secret
BREVO_WEBHOOK_SECRET=your-secure-brevo-webhook-secret

# Node Environment
NODE_ENV=production

# Google Drive Configuration (Production)
GOOGLE_DRIVE_FOLDER_ID=your_production_google_drive_folder_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Security Headers (optional)
SECURE_HEADERS=true

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX