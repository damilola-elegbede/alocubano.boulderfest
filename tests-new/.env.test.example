# Test Environment Variables Example
# Copy this file to .env.test and replace PLACEHOLDER values with actual test credentials

# Admin Configuration
ADMIN_PASSWORD=<bcrypt_hash_of_test_password>
ADMIN_SECRET=<minimum_32_character_test_secret>
ADMIN_SESSION_DURATION=3600000

# Database Configuration - Use local SQLite for tests
DATABASE_URL=file:./test-integration.db
TURSO_DATABASE_URL=file:./test-integration.db

# Email Service (Mock/Test Mode)
BREVO_API_KEY=<your_brevo_test_api_key>
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WEBHOOK_SECRET=<your_brevo_webhook_secret>

# Payment Processing (Stripe Test Keys)
STRIPE_PUBLISHABLE_KEY=<your_stripe_test_publishable_key>
STRIPE_SECRET_KEY=<your_stripe_test_secret_key>
STRIPE_WEBHOOK_SECRET=<your_stripe_webhook_secret>

# QR Code Configuration
QR_SECRET_KEY=<minimum_32_character_qr_secret>
QR_CODE_EXPIRY_DAYS=90
QR_CODE_MAX_SCANS=10

# Wallet Configuration
WALLET_AUTH_SECRET=<minimum_32_character_wallet_secret>

# Event Configuration
EVENT_START_DATE=2026-05-15T10:00:00-06:00
EVENT_END_DATE=2026-05-17T23:00:00-06:00

# Test Configuration
NODE_ENV=test
TEST_TYPE=integration

# Disable external services for tests
DISABLE_NGROK=true
INTEGRATION_NEEDS_SERVER=false