# Test Environment Variables for Integration Tests
# This file provides minimal required configuration for running tests

# Admin Configuration
ADMIN_PASSWORD=$2a$10$PLACEHOLDER_HASH
ADMIN_SECRET=PLACEHOLDER_MIN_32_CHARS_FOR_TESTING
ADMIN_SESSION_DURATION=3600000

# Database Configuration - Use local SQLite for tests
DATABASE_URL=file:./test-integration.db
TURSO_DATABASE_URL=file:./test-integration.db

# Email Service (Mock/Test Mode)
BREVO_API_KEY=test_api_key_for_integration_tests
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WEBHOOK_SECRET=test_webhook_secret

# Payment Processing (Stripe Test Keys - provide via CI or local .env.test)
STRIPE_PUBLISHABLE_KEY=pk_test_PLACEHOLDER
STRIPE_SECRET_KEY=sk_test_PLACEHOLDER
STRIPE_WEBHOOK_SECRET=whsec_PLACEHOLDER

# QR Code Configuration
QR_SECRET_KEY=PLACEHOLDER_QR_SECRET_MIN_32_CHARS
QR_CODE_EXPIRY_DAYS=90
QR_CODE_MAX_SCANS=10

# Wallet Configuration
WALLET_AUTH_SECRET=PLACEHOLDER_WALLET_SECRET_MIN_32_CHARS

# Event Configuration
EVENT_START_DATE=2026-05-15T10:00:00-06:00
EVENT_END_DATE=2026-05-17T23:00:00-06:00

# Test Configuration
NODE_ENV=test
TEST_TYPE=integration

# Disable external services for tests
DISABLE_NGROK=true
INTEGRATION_NEEDS_SERVER=false