# Centralized Workflow Environment Configuration
# This file defines consistent environment variables for all CI/CD workflows

# Node Environment
NODE_ENV=test
CI=true

# Database Configuration
DATABASE_URL=file:./data/ci-test.db
TURSO_DATABASE_URL=file:./data/ci-test.db
# TURSO_AUTH_TOKEN should be set as GitHub Secret for CI
# TURSO_AUTH_TOKEN=${{ secrets.TURSO_AUTH_TOKEN_CI }}

# Server Configuration
# Dynamic port allocation: BASE_PORT + (run_number % 1000)
BASE_PORT=3000
PORT_RANGE=1000

# ngrok Configuration
NGROK_DOMAIN=alocubanoboulderfest.ngrok.io

# Test Configuration
TEST_TIMEOUT=10000
TEST_MAX_RETRIES=2
TEST_RETRY_DELAY=2000

# Performance Thresholds
MAX_TEST_DURATION_MS=5000
MAX_SERVER_STARTUP_MS=60000

# Cleanup Configuration
CLEANUP_TIMEOUT_MS=5000
PROCESS_KILL_SIGNAL=TERM

