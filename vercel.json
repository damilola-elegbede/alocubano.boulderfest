{
  "outputDirectory": ".",
  "framework": null,
  "cleanUrls": true,
  "trailingSlash": false,
  "buildCommand": "npm run migrate:vercel && npm run bootstrap:vercel && npm run build",
  "functions": {
    "api/docs.js": {
      "maxDuration": 10
    },
    "api/config/*.js": {
      "maxDuration": 5
    },
    "api/admin/*.js": {
      "maxDuration": 15
    },
    "api/payments/*.js": {
      "maxDuration": 30
    },
    "api/tickets/*.js": {
      "maxDuration": 20
    }
  },
  "crons": [
    {
      "path": "/api/sheets/scheduled-sync",
      "schedule": "*/15 * * * *"
    }
  ],
  "images": {
    "sizes": [16, 32, 48, 64, 96, 128, 256, 384],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "*.vercel.app"
      },
      {
        "protocol": "https",
        "hostname": "drive.google.com"
      },
      {
        "protocol": "https",
        "hostname": "*.googleusercontent.com"
      }
    ]
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/favicon.ico",
      "destination": "/images/favicon.ico"
    },
    {
      "source": "/gallery-data/:path*",
      "destination": "/gallery-data/:path*"
    },
    {
      "source": "/featured-photos.json",
      "destination": "/featured-photos.json"
    },
    {
      "source": "/home",
      "destination": "/pages/core/home"
    },
    {
      "source": "/(about|tickets|donations|contact|checkout-success|checkout-cancel|my-tickets|success|failure)",
      "destination": "/pages/core/$1"
    },
    {
      "source": "/(gallery|artists|schedule)",
      "destination": "/pages/events/2026-boulder/$1"
    },
    {
      "source": "/registration",
      "destination": "/pages/core/tickets"
    },
    {
      "source": "/register-tickets",
      "destination": "/pages/core/register-tickets"
    },
    {
      "source": "/boulder-fest-2025",
      "destination": "/pages/events/2025-boulder/index"
    },
    {
      "source": "/boulder-fest-2025/(artists|schedule|gallery)",
      "destination": "/pages/events/2025-boulder/$1"
    },
    {
      "source": "/boulder-fest-2026",
      "destination": "/pages/events/2026-boulder/index"
    },
    {
      "source": "/boulder-fest-2026/(artists|schedule|gallery)",
      "destination": "/pages/events/2026-boulder/$1"
    },
    {
      "source": "/weekender-2026-09",
      "destination": "/pages/events/2026-weekender/index"
    },
    {
      "source": "/weekender-2026-09/(artists|schedule|gallery)",
      "destination": "/pages/events/2026-weekender/$1"
    },
    {
      "source": "/admin",
      "destination": "/pages/admin/index"
    },
    {
      "source": "/admin/(login|dashboard|checkin|analytics|mfa-settings|registrations|tickets|api-endpoints|test-dashboard)",
      "destination": "/pages/admin/$1"
    }
  ],
  "redirects": [
    {
      "source": "/about-festival",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/2025-artists",
      "destination": "/boulder-fest-2025/artists",
      "permanent": true
    },
    {
      "source": "/2025-schedule",
      "destination": "/boulder-fest-2025/schedule",
      "permanent": true
    },
    {
      "source": "/2025-gallery",
      "destination": "/boulder-fest-2025/gallery",
      "permanent": true
    },
    {
      "source": "/gallery-2025",
      "destination": "/boulder-fest-2025/gallery",
      "permanent": true
    },
    {
      "source": "/2026-artists",
      "destination": "/boulder-fest-2026/artists",
      "permanent": true
    },
    {
      "source": "/2026-schedule",
      "destination": "/boulder-fest-2026/schedule",
      "permanent": true
    },
    {
      "source": "/2026-gallery",
      "destination": "/boulder-fest-2026/gallery",
      "permanent": true
    },
    {
      "source": "/2026-sept-artists",
      "destination": "/weekender-2026-09/artists",
      "permanent": true
    },
    {
      "source": "/2026-sept-schedule",
      "destination": "/weekender-2026-09/schedule",
      "permanent": true
    },
    {
      "source": "/2026-sept-gallery",
      "destination": "/weekender-2026-09/gallery",
      "permanent": true
    },
    {
      "source": "/boulder-fest-2025/tickets",
      "destination": "/tickets",
      "permanent": true
    },
    {
      "source": "/boulder-fest-2026/tickets",
      "destination": "/tickets",
      "permanent": true
    },
    {
      "source": "/weekender-2026-09/tickets",
      "destination": "/tickets",
      "permanent": true
    },
    {
      "source": "/boulder-fest-2026/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/boulder-fest-2026/about",
      "destination": "/about",
      "permanent": true
    },
    {
      "source": "/boulder-fest-2026/donations",
      "destination": "/donations",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Link",
          "value": "<https://fonts.googleapis.com>; rel=dns-prefetch"
        },
        { "key": "Link", "value": "<https://instagram.com>; rel=dns-prefetch" },
        {
          "key": "Link",
          "value": "<https://drive.google.com>; rel=preconnect; crossorigin"
        },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com https://www.googletagmanager.com https://www.google-analytics.com https://vercel.live; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://vercel.com; font-src 'self' data: https://fonts.gstatic.com https://vercel.live; img-src 'self' data: https: https://drive.google.com https://*.googleusercontent.com https://vercel.com; connect-src 'self' https://api.stripe.com https://m.stripe.com https://m.stripe.network https://api.brevo.com https://www.google-analytics.com https://vercel.live https://*.pusher.com wss://*.pusher.com; frame-src https://js.stripe.com https://hooks.stripe.com https://vercel.live; media-src 'self' https://drive.google.com https://*.googleusercontent.com; object-src 'none'; base-uri 'self'; form-action 'self' https://checkout.stripe.com; manifest-src 'self'" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=(), interest-cohort=(), browsing-topics=()" }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|gif|svg|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        { "key": "Vary", "value": "Accept" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, stale-while-revalidate=604800"
        },
        { "key": "Vary", "value": "Accept-Encoding" }
      ]
    },
    {
      "source": "/(.*)\\.(json)",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, stale-while-revalidate=86400"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=3600, stale-while-revalidate=86400"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://www.alocubanoboulderfest.org"
        },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS, PUT, DELETE" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, X-CSRF-Token, Authorization" }
      ]
    },
    {
      "source": "/js/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    }
  ]
}