{
  "buildCommand": "npm run prebuild && echo 'Static site ready'",
  "outputDirectory": ".",
  "framework": null,
  "devCommand": "vercel dev",
  "functions": {
    "api/gallery.js": {
      "maxDuration": 10
    },
    "api/featured-photos.js": {
      "maxDuration": 10
    },
    "api/debug.js": {
      "maxDuration": 5
    },
    "api/cache-warm.js": {
      "maxDuration": 15
    },
    "api/image-proxy/[fileId].js": {
      "maxDuration": 10
    }
  },
  "images": {
    "sizes": [16, 32, 48, 64, 96, 128, 256, 384],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "*.vercel.app"
      }
    ]
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/home",
      "destination": "/pages/home.html"
    },
    {
      "source": "/about",
      "destination": "/pages/about.html"
    },
    {
      "source": "/artists",
      "destination": "/pages/artists.html"
    },
    {
      "source": "/schedule",
      "destination": "/pages/schedule.html"
    },
    {
      "source": "/gallery",
      "destination": "/pages/gallery.html"
    },
    {
      "source": "/gallery-2025",
      "destination": "/pages/gallery-2025.html"
    },
    {
      "source": "/gallery-test-minimal",
      "destination": "/pages/gallery-test-minimal.html"
    },
    {
      "source": "/tickets",
      "destination": "/pages/tickets.html"
    },
    {
      "source": "/donations",
      "destination": "/pages/donations.html"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/pages/404.html"
    }
  ],
  "redirects": [],
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|gif|svg|webp)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, stale-while-revalidate=604800" }
      ]
    },
    {
      "source": "/(.*)\\.(json)",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/js/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    }
  ]
}