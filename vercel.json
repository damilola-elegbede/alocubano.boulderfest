{
  "buildCommand": "npm run prebuild && echo 'Static site ready'",
  "outputDirectory": ".",
  "framework": null,
  "devCommand": "npx http-server . --cors",
  "functions": {
    "api/gallery.js": {
      "maxDuration": 10
    },
    "api/featured-photos.js": {
      "maxDuration": 10
    },
    "api/debug.js": {
      "maxDuration": 5
    },
    "api/cache-warm.js": {
      "maxDuration": 15
    },
    "api/image-proxy/[fileId].js": {
      "maxDuration": 10
    }
  },
  "images": {
    "sizes": [16, 32, 48, 64, 96, 128, 256, 384],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "*.vercel.app"
      }
    ]
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/images/:path*",
      "destination": "/images/:path*"
    },
    {
      "source": "/css/:path*",
      "destination": "/css/:path*"
    },
    {
      "source": "/js/:path*",
      "destination": "/js/:path*"
    },
    {
      "source": "/pages/:path*",
      "destination": "/pages/:path*"
    },
    {
      "source": "/public/:path*",
      "destination": "/public/:path*"
    },
    {
      "source": "/favicon.ico",
      "destination": "/images/favicon.ico"
    },
    {
      "source": "/gallery-data/:path*",
      "destination": "/public/gallery-data/:path*"
    },
    {
      "source": "/featured-photos.json",
      "destination": "/public/featured-photos.json"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/home",
      "destination": "/pages/home.html"
    },
    {
      "source": "/about",
      "destination": "/pages/about.html"
    },
    {
      "source": "/boulder-fest-2026/home",
      "destination": "/pages/home.html"
    },
    {
      "source": "/boulder-fest-2026/about",
      "destination": "/pages/about.html"
    },
    {
      "source": "/boulder-fest-2026/artists",
      "destination": "/pages/artists.html"
    },
    {
      "source": "/boulder-fest-2026/schedule",
      "destination": "/pages/schedule.html"
    },
    {
      "source": "/boulder-fest-2026/gallery",
      "destination": "/pages/gallery.html"
    },
    {
      "source": "/boulder-fest-2026/tickets",
      "destination": "/pages/tickets.html"
    },
    {
      "source": "/boulder-fest-2026/donations",
      "destination": "/pages/donations.html"
    },
    {
      "source": "/boulder-fest-2025/gallery",
      "destination": "/pages/gallery-2025.html"
    },
    {
      "source": "/weekender-2026-09/:page",
      "destination": "/pages/:page.html"
    },
    {
      "source": "/workshop-series-2026/:page",
      "destination": "/pages/:page.html"
    },
    {
      "source": "/about-festival",
      "destination": "/pages/about.html"
    },
    {
      "source": "/contact",
      "destination": "/pages/contact.html"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/boulder-fest-2026/home",
      "permanent": true
    },
    {
      "source": "/about",
      "destination": "/boulder-fest-2026/about",
      "permanent": true
    },
    {
      "source": "/artists",
      "destination": "/boulder-fest-2026/artists",
      "permanent": true
    },
    {
      "source": "/schedule",
      "destination": "/boulder-fest-2026/schedule",
      "permanent": true
    },
    {
      "source": "/gallery",
      "destination": "/boulder-fest-2026/gallery",
      "permanent": true
    },
    {
      "source": "/gallery-2025",
      "destination": "/boulder-fest-2025/gallery",
      "permanent": true
    },
    {
      "source": "/tickets",
      "destination": "/boulder-fest-2026/tickets",
      "permanent": true
    },
    {
      "source": "/donations",
      "destination": "/boulder-fest-2026/donations",
      "permanent": true
    }
  ],
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Link", "value": "<https://fonts.googleapis.com>; rel=dns-prefetch" },
        { "key": "Link", "value": "<https://instagram.com>; rel=dns-prefetch" },
        { "key": "Link", "value": "<https://drive.google.com>; rel=preconnect; crossorigin" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    },
    {
      "source": "/(.*)\\.(jpg|jpeg|png|gif|svg|webp)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Vary", "value": "Accept" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400, stale-while-revalidate=604800" },
        { "key": "Vary", "value": "Accept-Encoding" }
      ]
    },
    {
      "source": "/(.*)\\.(json)",
      "headers": [
        { "key": "Content-Type", "value": "application/json" },
        { "key": "Cache-Control", "value": "public, max-age=3600, stale-while-revalidate=86400" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=3600, stale-while-revalidate=86400" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    },
    {
      "source": "/js/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "Service-Worker-Allowed", "value": "/" }
      ]
    }
  ]
}