# Local Development Environment Template
# Copy this file to .env.local and fill in your actual values

# Stripe Configuration (Development)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com
STRIPE_PUBLISHABLE_KEY=your_test_publishable_key_here
STRIPE_SECRET_KEY=your_test_secret_key_here
STRIPE_WEBHOOK_SECRET=your_webhook_secret_here

# Stripe Checkout Configuration
STRIPE_DEFAULT_CURRENCY=usd
STRIPE_PAYMENT_METHOD_TYPES=card,us_bank_account

# Turso Database Configuration (Development)
# Your development database URL from Turso CLI or dashboard
TURSO_DATABASE_URL=libsql://your-dev-database-name-your-org.turso.io
# Your development database auth token
TURSO_AUTH_TOKEN=your_development_auth_token_here

# Brevo (SendinBlue) Email Configuration (Development)
BREVO_API_KEY=your-brevo-api-key
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_ORDER_CONFIRMATION_TEMPLATE_ID=2
UNSUBSCRIBE_SECRET=your-unsubscribe-secret
BREVO_WEBHOOK_SECRET=your-brevo-webhook-secret

# Node Environment
NODE_ENV=development

# Google Drive Configuration (for gallery)
# These are optional for local development
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Rate Limiting (optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring (optional)
ENABLE_PERFORMANCE_MONITORING=true

# CORS Security Configuration (optional - comma-separated list)
# Leave empty to use default configuration from cors-config.json
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Apple Wallet Configuration (Development)
# Get these certificates from Apple Developer Portal
APPLE_PASS_TYPE_ID=pass.com.alocubano.boulderfest.dev
APPLE_TEAM_ID=your-apple-team-id
APPLE_PASS_CERT=your-base64-encoded-certificate
APPLE_PASS_KEY=your-base64-encoded-private-key
APPLE_PASS_PASSWORD=your-certificate-password
APPLE_WWDR_CERT=your-base64-encoded-wwdr-certificate
WALLET_AUTH_SECRET=your-development-wallet-auth-secret
WALLET_BASE_URL=https://alocubanoboulderfest.ngrok.io
WALLET_ENABLE_UPDATES=true

# Event Configuration
EVENT_START_DATE=2026-05-15T10:00:00-06:00
EVENT_END_DATE=2026-05-17T23:00:00-06:00
EVENT_DATES_DISPLAY=May 15-17, 2026

# Venue Configuration
VENUE_NAME=Avalon Ballroom
VENUE_ADDRESS=6185 Arapahoe Road, Boulder, CO 80303
VENUE_LATITUDE=40.014984
VENUE_LONGITUDE=-105.219544