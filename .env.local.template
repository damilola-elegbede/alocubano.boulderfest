# Local Development Environment Template
# Copy this file to .env.local and fill in your actual values

# Stripe Configuration (Development)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Checkout Configuration
STRIPE_DEFAULT_CURRENCY=usd
STRIPE_PAYMENT_METHOD_TYPES=card,us_bank_account

# Turso Database Configuration (Development)
# Your development database URL from Turso CLI or dashboard
TURSO_DATABASE_URL=libsql://your-dev-database-name-your-org.turso.io
# Your development database auth token
TURSO_AUTH_TOKEN=your_development_auth_token_here

# Brevo (SendinBlue) Email Configuration (Development)
BREVO_API_KEY=your-brevo-api-key
BREVO_NEWSLETTER_LIST_ID=1
BREVO_WELCOME_TEMPLATE_ID=1
BREVO_VERIFICATION_TEMPLATE_ID=1
BREVO_ORDER_CONFIRMATION_TEMPLATE_ID=2
UNSUBSCRIBE_SECRET=your-unsubscribe-secret
BREVO_WEBHOOK_SECRET=your-brevo-webhook-secret

# Node Environment
NODE_ENV=development

# Google Drive Configuration (for gallery)
# These are optional for local development
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Rate Limiting (optional)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring (optional)
ENABLE_PERFORMANCE_MONITORING=true