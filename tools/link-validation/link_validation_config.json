{
  "project_settings": {
    "project_name": "A Lo Cubano Boulder Fest",
    "base_url": "http://localhost:8000",
    "production_url": "https://alocubano.boulderfest.com"
  },

  "file_discovery": {
    "include_patterns": ["*.html", "pages/*.html"],
    "exclude_patterns": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/*test*.html",
      "**/favicon-*.html",
      "**/.*"
    ]
  },

  "validation_settings": {
    "check_external_links": false,
    "external_link_timeout": 10,
    "validate_fragments": true,
    "validate_api_endpoints": true,
    "ignore_query_params": true,
    "skip_dns_prefetch": true,
    "skip_protocol_relative": true
  },

  "exclusion_patterns": {
    "dns_prefetch_links": [
      "//fonts.googleapis.com",
      "//fonts.gstatic.com",
      "//cdnjs.cloudflare.com",
      "//cdn.jsdelivr.net"
    ],
    "protocol_relative_pattern": "^//[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}",
    "skip_rel_attributes": ["dns-prefetch", "preconnect", "prefetch"]
  },

  "server_routes": {
    "/": "/index.html",
    "/home": "/pages/home.html",
    "/about": "/pages/about.html",
    "/artists": "/pages/artists.html",
    "/schedule": "/pages/schedule.html",
    "/gallery": "/pages/gallery.html",
    "/tickets": "/pages/tickets.html",
    "/donations": "/pages/donations.html",
    "/gallery-2025": "/pages/gallery-2025.html"
  },

  "api_endpoints": [
    "/api/featured-photos",
    "/api/gallery",
    "/api/drive-folders",
    "/api/debug-gallery",
    "/api/image-proxy/*"
  ],

  "static_directories": ["css", "js", "images", "assets", "public"],

  "file_extensions": {
    "internal_files": [".css", ".js", ".json", ".txt", ".xml"],
    "internal_images": [
      ".png",
      ".jpg",
      ".jpeg",
      ".gif",
      ".svg",
      ".ico",
      ".webp",
      ".avif"
    ],
    "external_protocols": ["http", "https", "mailto", "tel", "ftp"]
  },

  "reporting": {
    "output_file": "link_validation_report.txt",
    "generate_json_report": true,
    "json_output_file": "link_validation_results.json",
    "verbose_output": true,
    "group_by_type": true,
    "show_successful_links": false
  }
}
