# Monitoring Configuration Template
# Copy this to .env.local and fill in your values

# Sentry Error Tracking (Optional but recommended)
SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Alert Webhooks (Optional)
# Slack webhook: https://api.slack.com/messaging/webhooks
# Discord webhook: https://support.discord.com/hc/en-us/articles/228383668
ALERT_WEBHOOK_URL=
ESCALATION_WEBHOOK_URL=
ADMIN_API_KEY=

# Alert Thresholds (Optional - defaults shown)
API_RESPONSE_THRESHOLD=2000
DB_RESPONSE_THRESHOLD=1000
ERROR_RATE_THRESHOLD=0.05
MEMORY_USAGE_THRESHOLD=80
PAYMENT_FAILURE_THRESHOLD=0.01

# External Services (Required for full functionality)
TURSO_DATABASE_URL=
TURSO_AUTH_TOKEN=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
BREVO_API_KEY=
BREVO_NEWSLETTER_LIST_ID=
BREVO_WELCOME_TEMPLATE_ID=
BREVO_VERIFICATION_TEMPLATE_ID=
# Optional: only if you want to use an API key for read-only access
GOOGLE_SHEETS_API_KEY=

# Base64-encoded JSON for service account (preferred for write operations)
# Generate with:
#   cat service-account.json | base64 -w 0
GOOGLE_SERVICE_ACCOUNT_KEY=

# The ID of the spreadsheet used by the monitoring health check
GOOGLE_SHEETS_SPREADSHEET_ID=

# Vercel Environment (provided by Vercel at runtime)
# VERCEL_ENV=production
VERCEL_URL=
